<!DOCTYPE html>
<html>
    <head>
      <title>BillBunny</title>
    </head>
    <body>
      <h1>Welcome to BillBunny!</h1>
      <div id="container">
        <div id="user_nav">
          <% if current_user %>
            Welcome <%= current_user.name %>!
          <br>
          User id <%= current_user.uid %>
          <br>
	        Money owed to <%= current_user.name %> <%= @to_receive %>
	        <br>
	        Money owed by <%= current_user.name %> <%= @to_pay %>
            <br>
            <%= link_to "Create Transaction", transactions_path %>
            <br>
            <%= link_to "Sign Out", signout_path %>
          <% else %>
            <%= link_to "Sign in with Facebook", "/auth/facebook" %>
            <% end %>
      </div>
    </div>
  </div>
</body>
</html>



