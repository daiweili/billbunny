<!DOCTYPE html>
<html>
    <head>
      <title>BillBunny</title>
    </head>
    <body>
      <h1>Welcome to BillBunny!</h1>
      <div id="container">
        <div id="user_nav">
          <% if current_user %>
            Welcome <%= current_user.name %>!
            <%= link_to "Sign Out", signout_path %>
          <% else %>
            <%= link_to "Sign in with Facebook", "/auth/facebook" %>
          <% end %>
      </div>
    </div>
  </div>
</body>
</html>



